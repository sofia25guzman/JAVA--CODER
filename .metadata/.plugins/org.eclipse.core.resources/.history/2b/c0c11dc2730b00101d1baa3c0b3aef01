package com.coderhouse;

public class Clase01 {

	public static void main(String[] args) {
		//definimos una varaible --primero el tipo de variable, luego el nombre y luego el =
		
		String entrada = "Hola Coders...!!!";		
		System.out.println(entrada);
		
		int miPrimerNumero = 2025;
		System.out.println(miPrimerNumero);
		
		//para los decimales, se debe agregar la f al final, para confirmar que es un decimal
		float numeroConDecimal = 10.55f;
		System.out.println(numeroConDecimal);
		
		int numeroEntero = 13;
		
		String mes = "Marzo";
		
		//para concatenar variables
		System.out.println(numeroEntero + " de "+ mes + " de "+miPrimerNumero);
		
		//yo puedo solo definir la variable sin inicializarla (sin asignarle el valor)
		
		String indefinida;
		indefinida = "2323";
		
		//si quiero sobreescribir el valor nuevo de una variable. siempre que llame a la variable va 
		//imprimir el Ãºltimo valor asignado
		indefinida = "Nueva variable";
		
		//aqui hay una CONCATENACION
		System.out.println(indefinida+mes);
		
		//aqui hay una OPERACION MATEMATICA
		
	}

}
